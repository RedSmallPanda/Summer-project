<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sjtu.jpw.Domain.Refund" table="Refund" schema="jpw">
        <id name="orderId">
            <column name="order_id" sql-type="int(11)"/>
        </id>
        <property name="state">
            <column name="state" sql-type="text" not-null="true"/>
        </property>
        <property name="reason">
            <column name="reason" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>