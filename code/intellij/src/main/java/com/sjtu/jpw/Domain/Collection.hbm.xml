<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sjtu.jpw.Domain.Collection" table="Collection" schema="jpw">
        <composite-id mapped="true" class="com.sjtu.jpw.Domain.CollectionPK">
            <key-property name="userId">
                <column name="user_id" sql-type="int(11)"/>
            </key-property>
            <key-property name="showId">
                <column name="show_id" sql-type="int(11)"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>