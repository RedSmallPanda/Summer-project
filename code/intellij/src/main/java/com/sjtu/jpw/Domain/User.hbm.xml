<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sjtu.jpw.Domain.User" table="User" schema="jpw">
        <id name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="text" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="text" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="text" not-null="true"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>
        <property name="nickname">
            <column name="nickname" sql-type="text" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="text" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>